{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true, // ES6
    "target": "es6", // or es2015
    "noImplicitAny": true, // implicitAny
    "moduleResolution": "node", // "node" | "classic"
    "sourceMap": false, // true
    "allowJs": true, // Allow .js files to be compiled
    "checkJs": false, // Check .js files for errors
    "outDir": "build", // Compile to this directory
    "baseUrl": ".", // Compile from this directory
    "paths": { // Add these paths to the resolve
      "*": [
          "node_modules/*"
      ]
    },
    "removeComments": true,
    "pretty": false,
  },
  "include": [ // Include these files
    "src/*.ts"
  ],
}
